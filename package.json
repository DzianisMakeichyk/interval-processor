{
  "name": "interval-processor",
  "version": "1.0.0",
  "description": "Interval Processor - A CLI tool for processing and merging interval ranges",
  "type": "module",
  "main": "src/core/index.js",
  "bin": {
    "interval-processor": "./cli.js",
    "interval-merge": "./cli.js"
  },
  "scripts": {
    "start": "node cli.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "lint": "eslint src/**/*.js test/**/*.js cli.js",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\" \"cli.js\"",
    "clean": "rm -rf coverage",
    "prepublishOnly": "npm run clean && npm test",
    "performance": "node performance-test.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "interval",
    "merge",
    "ranges",
    "cli",
    "processor",
    "intervals",
    "exclude",
    "include"
  ],
  "author": "Denis Makeichyk",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.34.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DzianisMakeichyk/interval-processor.git"
  },
  "homepage": "https://github.com/DzianisMakeichyk/interval-processor#readme",
  "bugs": {
    "url": "https://github.com/DzianisMakeichyk/interval-processor/issues"
  },
  "preferGlobal": true
}