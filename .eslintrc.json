{
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "warn",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["warn", "all"],
    "brace-style": ["warn", "1tbs"],
    "indent": "off",
    "quotes": "off",
    "semi": ["error", "always"]
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/"
  ]
}
